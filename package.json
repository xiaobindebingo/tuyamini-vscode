{
  "name": "tuyamini-vscode",
  "displayName": "Tuya Miniapp",
  "description": "涂鸦小程序vscode插件",
  "publisher": "xiaobindebingo",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaobindebingo/tuyamini-vscode"
  },
  "version": "0.0.10",
  "icon": "res/icon.png",
  "engines": {
    "vscode": "^1.59.1"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "workspaceContains:manifest.json",
    "onLanguage:javascript",
    "onLanguage:xml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "createComponentDir",
        "title": "创建涂鸦小程序Component"
      },
      {
        "command": "createPageDir",
        "title": "创建涂鸦小程序Page"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "createComponentDir",
          "group": "1_modification",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "createPageDir",
          "group": "1_modification",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "jsonValidation": [
      {
        "fileMatch": "pages/**/*.json",
        "url": "./res/json/page.json"
      },
      {
        "fileMatch": "manifest.json",
        "url": "./res/json/manifest.json"
      }
    ],
    "languages": [
      {
        "id": "xml",
        "extensions": [
          ".xml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "xml",
        "scopeName": "source.xml",
        "path": "./syntaxes/tuyamini-vscode.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.59.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@types/ejs": "^3.1.0",
    "ejs": "^3.1.6"
  }
}
